<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout.Tuvanvaymuanha">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/head"
            android:background="#e8e1d1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/home"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/homelove"/>
            <TextView
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/home"
                android:layout_width="190dp"
                android:textSize="25dp"
                android:id="@+id/sh"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Sở hữu căn nhà mơ ước hôm nay"/>

            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv"
                android:layout_width="250dp"
                android:layout_below="@+id/sh"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:text="Tư vấn với đội ngũ chuyên nghiệp, nhiệt tình"
                android:textSize="20dp"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:id="@+id/layout"
                android:layout_below="@+id/tv"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/pheduyet"
                    android:text="Phê duyệt nhanh chóng"
                    android:layout_width="110dp"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/dinhgiacanhtranh"
                    android:text="Định giá cạnh tranh"
                    android:layout_width="110dp"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/vay"
                    android:text="Vay đến 80% căn hộ"
                    android:layout_width="110dp"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/tuvanmienphi"
                android:layout_marginBottom="20dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/bogoctuvan"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/layout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Nhận tư vấn miễn phí"/>
        </RelativeLayout>
          <TextView
              android:id="@+id/vv"
              android:layout_marginTop="10dp"
              android:layout_below="@+id/head"
      android:layout_width="300dp"
              android:layout_centerHorizontal="true"
      android:layout_height="wrap_content"
              android:textSize="20dp"
              android:gravity="center"
      android:text="Vay vốn đơn giản và dễ dàng với nhiếu sự lựa chọn từ TanhX"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/danhchonguoimuanha"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vv">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_below="@+id/vv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#A1B7BA"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                   >
                    <TextView
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Dành cho người mua nhà"
                        android:textSize="25dp"
                        android:gravity="center"
                        />
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/backhome"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vay mua nhà dễ dàng với giải pháp đa dạng, linh hoạt"/>

                    <TextView
                        android:drawableLeft="@drawable/checkc"
                        android:gravity="center"
                        android:drawablePadding="30dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:text="Lãi suất độc quyền từ 7%/năm"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"/>
                    <TextView
                        android:drawableLeft="@drawable/checkc"
                        android:gravity="center"
                        android:drawablePadding="30dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text="Không cần trả gốc tối đa 24 tháng"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"/>
                    <TextView

                        android:drawableLeft="@drawable/checkc"
                        android:gravity="center"
                        android:drawablePadding="30dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text="Tùy chọn cách thức thanh toán phù hợp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"/>

                    <Button
                        android:id="@+id/tuvan2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/custom_bogocct"
                        android:text="Tư vấn cho tôi"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/danhchonguoibannha"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/danhchonguoimuanha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_below="@+id/vv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#BC9CBF"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Dành cho người bán nhà"
                        android:textSize="25dp"
                        android:gravity="center"
                        />
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/outhome"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vay và giải ngân nhanh chóng giúp tối đa hóa lợi nhuận"/>

                    <TextView
                        android:drawableLeft="@drawable/checkc"
                        android:gravity="center"
                        android:drawablePadding="30dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:text="Không cần tất toán khi chuyển nhượng"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"/>
                    <TextView
                        android:drawableLeft="@drawable/checkc"
                        android:gravity="center"
                        android:drawablePadding="30dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text="Giảm phí trả nợ trước và sau hạn"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"/>
                    <TextView
                        android:drawableLeft="@drawable/checkc"
                        android:gravity="center"
                        android:drawablePadding="30dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text="Nhận tiền bán nhà sớm"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"/>

                    <Button
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:background="@drawable/custom_bogocct"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/layout"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Tư vấn cho tôi"/>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/hsvaynhadongian"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Hồ sơ vay nhà đơn giản, thuận tiện"
            android:layout_below="@+id/danhchonguoibannha"/>

        <TextView
                android:id="@+id/dangki"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hsvaynhadongian"
            android:text="Đăng kí ngay hôm nay, nhận kết quả nhanh hơn 7 ngày so với thị trường"/>

        <TextView
            android:layout_marginRight="20dp"
            android:id="@+id/somot"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/somot"
            android:drawablePadding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/dangki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/somot"/>

        <TextView
            android:layout_marginRight="20dp"
            android:id="@+id/sohai"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/sohai"
            android:drawablePadding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/somot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sohai"/>

        <TextView
            android:layout_marginRight="20dp"
            android:id="@+id/soba"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/soba"
            android:drawablePadding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/sohai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/soba"/>

        <TextView
            android:layout_marginRight="20dp"
            android:id="@+id/sobon"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/sobon"
            android:drawablePadding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/soba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sobon"/>
    </RelativeLayout>


</ScrollView>
</RelativeLayout>