<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/backgrprofile"

    tools:context=".Layout.Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/rectangle_470"
        android:layout_height="162dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="80dp">

            <ImageView
                android:id="@+id/viewuser"
                android:layout_width="80dp"

                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/avtgoc" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="40dp"
            android:text="Xin chào,"
            android:textSize="20dp" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tv_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/inria"

            android:textSize="25dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_height="match_parent">
<androidx.cardview.widget.CardView
    app:cardCornerRadius="15dp"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:padding="10dp"
        android:id="@+id/thongtincanhan"
        android:layout_width="match_parent"
        android:fontFamily="@font/inria"
        android:text="Thông tin cá nhân"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:drawableRight="@drawable/angle_small_right"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/circle_user12"
        android:layout_height="50dp"/>
</androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/feedback"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:fontFamily="@font/inria"
                android:text="Góp ý"
                android:textColor="@color/black"
                android:textSize="23dp"
                android:drawableRight="@drawable/angle_small_right"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/feedback_hand"
                android:layout_height="50dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:padding="10dp"
                android:id="@+id/uudai"
                android:layout_width="match_parent"
                android:fontFamily="@font/inria"
                android:text="Đánh giá"
                android:textColor="@color/black"
                android:textSize="23dp"
                android:drawableRight="@drawable/angle_small_right"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ticket"
                android:layout_height="50dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/gt"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:fontFamily="@font/inria"
                android:text="Giới thiệu bạn bè"
                android:textColor="@color/black"
                android:textSize="23dp"
                android:drawableRight="@drawable/angle_small_right"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/following"
                android:layout_height="50dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:fontFamily="@font/inria"
                android:text="Hỗ trợ"
                android:id="@+id/hotro"
                android:textColor="@color/black"
                android:textSize="23dp"
                android:drawableRight="@drawable/angle_small_right"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/laptop_medical"
                android:layout_height="50dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:fontFamily="@font/inria"
                android:text="Đăng xuất"
                android:id="@+id/logout"
                android:textColor="@color/black"
                android:textSize="23dp"
                android:drawableRight="@drawable/angle_small_right"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/sign_out_alt"
                android:layout_height="50dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
