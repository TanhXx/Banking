                       android:layout_marginLeft="3dp"
                       android:layout_marginTop="5dp"
                       android:layout_weight="1"
                       android:background="@drawable/custom_bogocct"
                       app:cardCornerRadius="20dp">

                       <Button
                           android:id="@+id/chuyentien"
                           android:layout_width="100dp"
                           android:layout_height="72dp"
                           android:background="#FCFAFA"
                           android:drawableTop="@drawable/transfer"
                           android:fontFamily="@font/inria"
                           android:padding="7dp"
                           android:text="Chuyển tiền"
                           android:textAlignment="center"
                           android:textAllCaps="false"
                           android:textSize="13dp" />
                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_width="100dp"
                       android:layout_height="72dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="5dp"
                       android:layout_weight="1"
                       android:background="@drawable/custom_bogocct"
                       app:cardCornerRadius="20dp">

                       <Button
                           android:id="@+id/napthe"
                           android:layout_width="100dp"
                           android:layout_height="72dp"
                           android:background="#FCFAFA"
                           android:drawableTop="@drawable/shopcard"
                           android:fontFamily="@font/inria"
                           android:padding="4dp"
                           android:text="Nạp tiền điện thoại"
                           android:textAlignment="center"
                           android:textAllCaps="false"
                           android:textSize="13dp" />


                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_width="100dp"
                       android:layout_height="72dp"
                       android:layout_alignParentRight="true"
                       android:layout_marginTop="5dp"
                       android:layout_marginEnd="3dp"
                       android:layout_weight="1"
                       android:background="@drawable/custom_bogocct"
                       app:cardCornerRadius="20dp">

                       <Button
                           android:id="@+id/thongke"
                           android:layout_width="100dp"
                           android:layout_height="72dp"
                           android:background="#FCFAFA"
                           android:drawableTop="@drawable/khampha"
                           android:fontFamily="@font/inria"
                           android:padding="3dp"
                           android:text="Thống kê tài sản"
                           android:textAlignment="center"
                           android:textAllCaps="false"
                           android:textSize="13dp" />


                   </androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:layout_width="100dp"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="20dp"
