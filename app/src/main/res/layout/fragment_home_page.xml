        android:textAllCaps="false"
        android:textSize="13dp"
        android:layout_width="100dp"
        android:background="#FCFAFA"
        android:layout_height="72dp"/>

</androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_width="100dp"
                       android:layout_marginLeft="3dp"
